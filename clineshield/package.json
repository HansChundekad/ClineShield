{
  "name": "clineshield",
  "displayName": "ClineShield",
  "version": "0.1.0",
  "description": "Safety guardrails for Cline AI coding assistant",
  "publisher": "clineshield",
  "engines": {
    "vscode": "^1.109.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clineshield",
          "title": "ClineShield",
          "icon": "images/shield.svg"
        }
      ]
    },
    "views": {
      "clineshield": [
        {
          "type": "webview",
          "id": "clineshield.metricsView",
          "name": "Metrics"
        },
        {
          "id": "clineshield.changeMapView",
          "name": "Change Map"
        }
      ]
    },
    "commands": [
      {
        "command": "clineshield.reloadConfig",
        "title": "ClineShield: Reload Configuration"
      },
      {
        "command": "clineshield.deactivate",
        "title": "ClineShield: Deactivate (Coming in Phase 3)"
      },
      {
        "command": "clineshield.generateTestMetrics",
        "title": "ClineShield: Generate Test Metrics"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "smoke:phase6": "node scripts/smoke-test-phase6.js"
  },
  "keywords": [
    "vscode",
    "cline",
    "security",
    "hooks"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HansChundekad/ClineShield"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "ts-morph": "^27.0.2"
  }
}
